<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.upbrasil.up.activity.ConfirmarTelefoneActivity">

    <Button
        android:id="@+id/botao_motorista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageviewww"
        android:layout_alignStart="@+id/descricao_passageiro2"
        android:layout_alignEnd="@+id/imageviewww"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/black"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Seja um motorista"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/descricao_passageiro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/imagevieaaa"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageviewww"
        android:fontFamily="@font/lato_italic"
        android:text="Faça corridas e ganhe dinheiro completando-as, com o acesso de motorista"
        android:textAlignment="textEnd"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagevieaaa"
        android:layout_marginStart="11dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/imagevieaaa"
        android:fontFamily="@font/lato"
        android:text="Passageiro"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/descricao_passageiro"
        android:layout_alignTop="@+id/imageviewww"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageviewww"
        android:fontFamily="@font/lato"
        android:text="Motorista"
        android:textAlignment="textEnd" />

    <ImageButton
        android:id="@+id/imageviewww"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/botao_passageiro"
        android:layout_alignEnd="@+id/titulo_escolha"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-1dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/titulo_escolha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="90sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:fontFamily="@font/lato" />

    <ImageButton
        android:id="@+id/imagevieaaa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/titulo_escolha"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/passenger" />

    <TextView
        android:id="@+id/descricao_passageiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/titulo_escolha"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imagevieaaa"
        android:fontFamily="@font/lato_italic"
        android:text="Peça corridas para você ou pessoas conhecidas com o acesso de passageiro."
        android:textAlignment="textStart"
        android:textSize="12sp" />

    <Button
        android:id="@+id/botao_passageiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descricao_passageiro"
        android:layout_alignStart="@+id/imagevieaaa"
        android:layout_alignEnd="@+id/descricao_passageiro"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/myBlue"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Seja um passageiro"
        android:textColor="@android:color/white" />

</RelativeLayout>
