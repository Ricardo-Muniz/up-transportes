<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.upbrasil.up.activity.ConfirmarTelefoneActivity">

    <Button
        android:id="@+id/botao_confirmar"
        android:layout_width="250sp"
        android:layout_height="50dp"
        android:layout_below="@+id/campo_sms"
        android:layout_alignStart="@+id/titulo_confirmar"
        android:layout_alignLeft="@+id/titulo_confirmar"
        android:layout_alignEnd="@+id/titulo_confirmar"
        android:layout_alignRight="@+id/titulo_confirmar"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/raleway"
        android:text="CONFIRMAR SMS"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titulo_confirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="90sp"
        android:layout_marginRight="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:fontFamily="@font/raleway" />

    <EditText
        android:id="@+id/campo_sms"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/titulo_confirmar"
        android:layout_alignStart="@+id/titulo_confirmar"
        android:layout_alignLeft="@+id/titulo_confirmar"
        android:layout_alignEnd="@+id/titulo_confirmar"
        android:layout_alignRight="@+id/titulo_confirmar"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0sp"
        android:background="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="18sp" />

</RelativeLayout>
