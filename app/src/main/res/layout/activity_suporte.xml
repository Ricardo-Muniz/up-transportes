<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_color"
    tools:context=".activity.SuporteActivity">

    <ImageView
        android:id="@+id/botao_voltar"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/back_icon_white" />

    <TextView
        android:id="@+id/titulo_navbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/botao_voltar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/botao_voltar"
        android:fontFamily="@font/raleway_bold"
        android:text="Fale Conosco"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_marginEnd="35dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myGrey"
        android:layout_below="@id/titulo_navbar"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="15dp">


        <TextView
            android:id="@+id/label_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway"
            android:textColor="@android:color/black"
            android:text="MOTIVO" />

        <EditText
            android:id="@+id/campo_motivo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/label_1"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:textSize="14dp"
            android:fontFamily="@font/open_sans" />

        <TextView
            android:id="@+id/label_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/campo_motivo"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/raleway"
            android:text="MENSAGEM" />

        <EditText
            android:id="@+id/campo_mensagem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="text|textMultiLine"
            android:gravity="top"
            android:layout_below="@+id/label_2"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:fontFamily="@font/open_sans" />

        <Button
            android:id="@+id/botao_enviar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/campo_mensagem"
            android:layout_marginTop="30dp"
            android:background="@color/myGreen"
            android:fontFamily="@font/raleway_bold"
            android:text="ENVIAR MENSAGEM"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>